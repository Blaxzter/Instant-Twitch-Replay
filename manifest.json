
{
  "manifest_version": 3,
  "name": "Instant Twitch Replay",
  "version": "1.0",
  "description": "Records last x seconds of Twitch streams for instant replay",
  "permissions": [
    "storage",
    "tabs",
    "scripting"
  ],
  "host_permissions": [
    "https://www.twitch.tv/*"
  ],
  "content_scripts": [{
    "matches": ["https://www.twitch.tv/*"],
    "js": ["content.js"]
  }],
  "background": {
    "service_worker": "background.js"
  },
  "icons": {
    "16": "icons/icon16.png",
    "32": "icons/icon32.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  }
}